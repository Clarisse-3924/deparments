{{#partial "content"}}
    <form action="/user/new" method="post" id="colors">
        <div class="form-group">
            <label for="name">First name:</label><br>
            <input class="form-control" id="name" name="name" type="text"><br>
        </div>
        <div class="form-group">
            <label for="position">Position:</label><br>
            <input class="form-control" id="position" name="position" type="text"><br>
        </div>
        <div class="form-group">
            <label for="department">Department name:</label><br>
            <select class="form-control" name="department">
                {{#each departments}}
                    <option>{{departmentname}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-dark">ADD</button>
        </div>
    </form>
{{/partial}}
