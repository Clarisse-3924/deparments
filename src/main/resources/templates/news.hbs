{{#partial "content"}}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <a style="color:black;" id="button" href="/deptNews/new" class="btn btn-dark btn-lg" role="button">general news</a><br><br>
            </div>
        </div>
    </div>
    <div class="container">
            <div class="col-md-6">
                {{#if departmentNews}}
                    <h3 style="text-decoration:underline; padding-bottom:2%; margin-bottom:3%;">general news</h3>
                    {{#each departmentNews}}
                        <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                            <div style="color:black;" class="card-header">{{ departmentname }}</div>
                            <div class="card-body">
                                <h5 style="color:black;" class="card-title">{{ title }}</h5>
                                <p style="color:black;" class="card-text">{{ content }}</p>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <h1>No department news posted yet!</h1>
                {{/if}}
            </div>
        </div>
    </div>
{{/partial}}
<style>
</style>
{{> layout.hbs}}